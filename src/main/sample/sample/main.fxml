            <Button onAction="#showSettingPane" contentDisplay="TOP" mnemonicParsing="false" prefHeight="36.0" prefWidth="57.0" textFill="#8e9297">
               <font>
                  <Font size="7.0" />
               </font>
               <styleClass>
                  <String fx:value="text-navi-bar" />
                  <String fx:value="button-setting" />
               </styleClass>
            </Button>
         </children>
